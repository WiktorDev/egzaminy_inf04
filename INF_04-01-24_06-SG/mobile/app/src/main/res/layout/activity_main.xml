<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="match_parent"
        android:background="#F5F5DC"
        android:gravity="center|top"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/materialToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:title="Kości"
            app:titleTextColor="@color/white"
            android:layout_marginBottom="12dp"
            android:theme="?attr/actionBarTheme" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#A52A2A"
            android:gravity="center_vertical"
            android:text="Gra w kości. Autor 0000000000"
            android:textColor="#fff"
            android:layout_marginBottom="12dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/throw_cubes_button"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#D2691E"
            android:text="RZUĆ KOŚĆMI" />

        <LinearLayout
            android:id="@+id/images_container"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="14dp"
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/question" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/question" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/question" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/question" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/question" />
        </LinearLayout>

        <TextView
            android:id="@+id/pointsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wynik tego losowania: 16"
            android:layout_marginBottom="16dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/totalPointsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wynik gry: 85"
            android:layout_marginBottom="16dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#D2691E"
            android:text="RESETUJ WYNIK" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>